# Database Configuration
# Replace with your actual PostgreSQL connection string
DATABASE_URL="postgresql://username:password@localhost:5432/quizrevenue"

# Required PostgreSQL connection details (alternative to DATABASE_URL)
PGHOST="localhost"
PGPORT="5432"
PGDATABASE="quizrevenue"
PGUSER="your_db_username"
PGPASSWORD="your_db_password"

# Session Management
# Generate a random string for production use
SESSION_SECRET="your-super-secret-session-key-change-this-in-production"

# Email Configuration (Mailtrap for development, real SMTP for production)
SMTP_HOST="sandbox.smtp.mailtrap.io"
SMTP_PORT="2525"
SMTP_USER="your_mailtrap_username"
SMTP_PASS="your_mailtrap_password"
FROM_EMAIL="noreply@quizrevenue.com"

# Application Configuration
NODE_ENV="development"
PORT="5000"

# Optional: Ad Provider API Keys (for production)
ADMOB_API_KEY="your_admob_api_key"
UNITY_ADS_API_KEY="your_unity_ads_api_key"
IRONSOURCE_API_KEY="your_ironsource_api_key"
FACEBOOK_ADS_API_KEY="your_facebook_ads_api_key"

# Optional: Payment Gateway Configuration
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_PUBLIC_KEY="pk_test_your_stripe_public_key"
PAYPAL_CLIENT_ID="your_paypal_client_id"
PAYPAL_CLIENT_SECRET="your_paypal_client_secret"

# Optional: External Services
REDIS_URL="redis://localhost:6379"
CLOUDINARY_CLOUD_NAME="your_cloudinary_name"
CLOUDINARY_API_KEY="your_cloudinary_key"
CLOUDINARY_API_SECRET="your_cloudinary_secret"

# Security Configuration
JWT_SECRET="your-jwt-secret-key"
ENCRYPTION_KEY="your-32-character-encryption-key"

# Fraud Detection Services (optional)
MAXMIND_USER_ID="your_maxmind_user_id"
MAXMIND_LICENSE_KEY="your_maxmind_license_key"

# Analytics and Monitoring (optional)
GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"
SENTRY_DSN="your_sentry_dsn"

# Rate Limiting (optional)
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"

# File Upload Configuration (optional)
MAX_FILE_SIZE="10485760"
UPLOAD_PATH="./uploads"

# Development Tools
DEBUG="app:*"
LOG_LEVEL="debug"

# Pre-seeded SuperAdmin Account Details
# These are used to create the initial SuperAdmin account
SUPERADMIN_EMAIL="superadmin@quizapp.com"
SUPERADMIN_PASSWORD="SuperAdmin@123!"
SUPERADMIN_FIRST_NAME="Super"
SUPERADMIN_LAST_NAME="Admin"

# Quiz Platform Configuration
DEFAULT_QUIZ_TIME_LIMIT="30"
POINTS_PER_CORRECT_ANSWER="10"
USER_REVENUE_SHARE="0.80"
PLATFORM_FEE_PERCENTAGE="0.20"
MIN_PAYOUT_THRESHOLD="10.00"

# Regional Configuration
DEFAULT_COUNTRY="US"
DEFAULT_CURRENCY="USD"
SUPPORTED_LANGUAGES="en,es,fr,de"

# Feature Flags (enable/disable features)
ENABLE_EMAIL_VERIFICATION="true"
ENABLE_FRAUD_DETECTION="true"
ENABLE_LEADERBOARDS="true"
ENABLE_REFERRAL_SYSTEM="true"
ENABLE_A_B_TESTING="true"

# Backup and Maintenance
BACKUP_SCHEDULE="0 2 * * *"
MAINTENANCE_MODE="false"
MAINTENANCE_MESSAGE="System maintenance in progress"

# External API Rate Limits
API_RATE_LIMIT_PER_HOUR="1000"
QUIZ_CREATION_LIMIT_PER_DAY="10"
